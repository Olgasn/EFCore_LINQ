{
    "name": "SQL Server Dev Container",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "containerEnv": {
        "MSSQL_SA_PASSWORD": "${localEnv:MSSQL_SA_PASSWORD}"
    },
    "extensions": [
        "ms-dotnettools.csharp",
        "ms-azuretools.vscode-docker",
        "ms-mssql.mssql"
    ],
    "postCreateCommand": "bash .devcontainer/wait-for-mssql.sh && /opt/mssql-tools/bin/sqlcmd -S mssql -U sa -P \"$MSSQL_SA_PASSWORD\" -i .devcontainer/mssql/setup.sql"
}
