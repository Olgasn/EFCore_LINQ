{
  "name": "SQL Server Dev Environment",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-mssql.mssql",
        "ms-dotnettools.csharp"
      ]
    }
  },
  "forwardPorts": [ 1433 ],
  "postCreateCommand": "echo 'SQL Server container is starting... Use `sqlcmd` after a few seconds.'",
  "remoteUser": "vscode"
}