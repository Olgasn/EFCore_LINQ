{
  "name": "SQL Server Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-mssql.mssql"
      ]
    }
  },
  "containerEnv": {
    "ACCEPT_EULA": "Y",
    "MSSQL_PID": "Developer"
    // MSSQL_SA_PASSWORD автоматически подставляется из секрета Codespaces
  },
  "postCreateCommand": "bash /usr/local/bin/init-db.sh",
  "remoteUser": "vscode"
}